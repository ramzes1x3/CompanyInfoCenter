{% layout "defaultLayout.liquid", title: 'Office add form' %}

{% block content %}
    <main class="main">
        <div class="main__content-wrapper">
            <h2 class="main__title">Complete a simple form!</h2>

            <form
                class="form" 
                method="post"
                action="/officeAddForm"
                name="officeAdding"
            >
                <input
                    class="form__input"
                    type="hidden"
                    id="csrf_token"
                    name="csrf"
                    value="{{ csrfToken }}"
                >
                <div class="form__block">
                    <label 
                        class="form__label form__label_hidden"
                        for="comapnyId"
                    >
                        Company ID: 
                    </label>
                    <input
                        class="form__input"
                        type="number"
                        id="comapnyId"
                        name="company_id"
                        placeholder="Company ID"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="buildingId"
                    >
                        Bulding id:
                    </label>
                    <input
                        class="form__input"
                        type="number"
                        id="buildingId"
                        name="building_id"
                        placeholder="Bulding ID"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="rentalPrice"
                    >
                        Rental price: 
                    </label>
                    <input
                        class="form__input"
                        type="number"
                        id="rentalPrice"
                        name="rental_price"
                        placeholder="Rental price"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="constructionYear"
                    >
                        Construction year: 
                    </label>
                    <input
                        class="form__input"
                        type="number"
                        id="constructionYear"
                        name="construction_year"
                        placeholder="Construction year"
                    >
                </div>
                <button
                    class="form__button button button_transparent"
                    type="submit"
                >
                    Add office
                </button>
            </form>
        </div>
    </main>
{% endblock %}