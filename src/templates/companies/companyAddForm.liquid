{% layout "defaultLayout.liquid", title: 'Company add form' %}

{% block content %}
    <main class="main">
        <div class="main__content-wrapper">
            <h2 class="main__title">Complete a simple form!</h2>

            <form
                class="form" 
                method="post"
                action="/companyAddForm"
                name="companyAdding"
            >
                <input
                    class="form__input"
                    type="hidden"
                    id="csrf_token"
                    name="csrf"
                    value="{{ csrfToken }}"
                >
                <div class="form__block">
                    <label 
                        class="form__label form__label_hidden"
                        for="comapnyName"
                    >
                        Company name: 
                    </label>
                    <input
                        class="form__input"
                        type="text"
                        id="comapnyName"
                        name="name"
                        placeholder="Company name"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="number_of_employees"
                    >
                        Number of employees: 
                    </label>
                    <input
                        class="form__input"
                        type="number"
                        id="number_of_employees"
                        name="numberOfEmployees"
                        placeholder="Number of employees"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="foundation_year"
                    >
                        Foundation year: 
                    </label>
                    <input
                        class="form__input"
                        type="number"
                        id="foundation_year"
                        name="foundationYear"
                        placeholder="Foundation year"
                    >
                </div>
                <button
                    class="form__button button button_transparent"
                    type="submit"
                >
                    Add company
                </button>
            </form>
        </div>
    </main>
{% endblock %}