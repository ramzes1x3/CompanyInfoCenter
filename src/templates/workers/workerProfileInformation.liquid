{% layout "defaultLayout.liquid", title: 'Profile information' %}
{% assign worker = this.data %}

{% block content %}
    <main class="main">
        <div class="main__content-wrapper">
            <h2 class="main__title">Profile information</h2>

            {% if errMessage != undefined %}
                <h3 class="main__error-title"> {{ errMessage }} </h3>
            {% endif %}

            <form
                class="form" 
                method="POST"
                action="/workerProfileInformation"
                name="workerProfileInformation"
            >
                <input
                    class="form__input"
                    type="hidden"
                    id="csrf_token"
                    name="csrf"
                    value="{{ csrfToken }}"
                >
                <div class="form__block form__block_hidden">
                    <label 
                        class="form__label form__label_hidden"
                        for="workerId"
                    >
                        Worker id: 
                    </label>
                    <input
                        class="form__input"
                        type="number"
                        id="workerId"
                        name="id"
                        value="{{ worker.id }}"
                    >
                </div>
                <div class="form__block">
                    <label 
                        class="form__label form__label_hidden"
                        for="workerName"
                    >
                        Your name: 
                    </label>
                    <input
                        class="form__input"
                        type="text"
                        id="workerName"
                        name="name"
                        value="{{ worker.name }}"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="workerSurname"
                    >
                        Your surname:
                    </label>
                    <input
                        class="form__input"
                        type="text"
                        id="workerSurname"
                        name="surname"
                        value="{{ worker.surname }}"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="workerDateOfBirth"
                    >
                        Date of birth:
                    </label>
                    <input
                        class="form__input"
                        type="date"
                        id="workerDateOfBirth"
                        name="date_of_birth"
                        value="{{ worker.dateOfBirth }}"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="workerEmail"
                    >
                        Email:
                    </label>
                    <input
                        class="form__input"
                        type="email"
                        id="workerEmail"
                        name="email"
                        value="{{ worker.email }}"
                    >
                </div>
                <button
                    class="form__button button button_transparent"
                    type="submit"
                >
                    Change information
                </button>
            </form>
        </div>
    </main>
{% endblock %}