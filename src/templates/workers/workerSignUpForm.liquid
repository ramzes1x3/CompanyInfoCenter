{% layout "defaultLayout.liquid", title: 'Sign up' %}

{% block content %}
    <main class="main">
        <div class="main__content-wrapper">
            <h2 class="main__title">Registration form</h2>

            {% if errMessage != undefined%}
                <h3 class="main__error-title"> {{ errMessage }} </h3>
            {% endif %}

            <form
                class="form" 
                method="POST"
                action="/workerSignUpForm"
                name="workerSignUpForm"
            >
                <input
                    class="form__input"
                    type="hidden"
                    id="csrf_token"
                    name="csrf"
                    value="{{ csrfToken }}"
                >
                <div class="form__block">
                    <label 
                        class="form__label form__label_hidden"
                        for="workerName"
                    >
                        Your name: 
                    </label>
                    <input
                        class="form__input"
                        type="text"
                        id="workerName"
                        name="name"
                        placeholder="Your name"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="workerSurname"
                    >
                        Your surname:
                    </label>
                    <input
                        class="form__input"
                        type="text"
                        id="workerSurname"
                        name="surname"
                        placeholder="Your surname"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="workerDateOfBirth"
                    >
                        Date of birth:
                    </label>
                    <input
                        class="form__input"
                        type="date"
                        id="workerDateOfBirth"
                        name="date_of_birth"
                        placeholder="Date of birth"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="workerEmail"
                    >
                        Email:
                    </label>
                    <input
                        class="form__input"
                        type="email"
                        id="workerEmail"
                        name="email"
                        placeholder="Email"
                    >
                </div>
                <div class="form__block">
                    <label
                        class="form__label form__label_hidden"
                        for="workerPassword"
                    >
                        Password:
                    </label>
                    <input
                        class="form__input"
                        type="password"
                        id="workerPassword"
                        name="password"
                        placeholder="Password"
                    >
                </div>
                <button
                    class="form__button button button_transparent"
                    type="submit"
                >
                    Register
                </button>
            </form>
        </div>
    </main>
{% endblock %}